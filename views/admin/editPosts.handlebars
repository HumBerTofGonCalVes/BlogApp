{{#each erros}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar post: </h4>
        <form action="/posts/edit" method="POST">
            <input type="hidden" value="{{post._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{post.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{post.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{post.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control">{{post.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{this._id}}">{{this.nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registada.</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Editar post</button>
        </form>
    </div>
</div>