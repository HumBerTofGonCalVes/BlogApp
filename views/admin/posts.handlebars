<h2>Lista de posts: </h2>
<hr>
<a href="/posts/add"><button class='btn btn-success'>Novo post</button></a>

{{#each posts}}

<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>Desrição: {{descricao}}</p>
        <small>Data: {{data}}</small><br>
        <small>Categoria: {{categoria.nome}}</small><br>
        <a href="/posts/edit/{{_id}}"><button class="btn btn-success mt-3">Editar post</button></a>
        <a href="/posts/apagar/{{_id}}"><button class="btn btn-danger mt-3">Apagar post</button></a>
    </div>
</div>

{{else}}

<p>Nenhum post registado.</p>

{{/each}}