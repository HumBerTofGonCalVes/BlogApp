<h2>Lista de Categorias: </h2>
<hr>
<a href="/categorias/add"><button class='btn btn-success'>Nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Slug: {{slug}}</small><br>
        <small>Data de criação: {{date}}</small><br>
        <a href="/categorias/edit/{{_id}}">
            <button class="btn btn-success mt-4">Editar categoria</button>
        </a>
        <form action="/categorias/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submitt" class="btn btn-danger mt-2">Apagar Categoria</button>
        </form>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma categoria registada.</h4>
{{/each}}